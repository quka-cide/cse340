<% if (title) { %>
<h1><%= title %></h1>
<%}  else {
    res.redirect('/')
} %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<%- messages() %>

 <form class="form" id="addInventoryForm" action="/inv/add-inventory" method="post">
      <label for="classificationList">Classification</label>
      <div>
        <%- classificationList %>
      </div>

      <label for="inv_make">Make</label>
      <input
        type="text"
        id="inv_make"
        name="inv_make"
        required
        pattern="^[A-Za-z0-9\s'-.]{1,50}$"
        title="Make may include letters, numbers, spaces, apostrophes, hyphens and periods."
        value="<%= locals.inv_make || '' %>"
      >

      <label for="inv_model">Model</label>
      <input
        type="text"
        id="inv_model"
        name="inv_model"
        required
        pattern="^[A-Za-z0-9\s'-.]{1,50}$"
        value="<%= locals.inv_model || '' %>"
      >

      <label for="inv_year">Year</label>
      <input
        type="number"
        id="inv_year"
        name="inv_year"
        required
        min="1900"
        max="<%= new Date().getFullYear() %>"
        value="<%= locals.inv_year || '' %>"
      >

      <label for="inv_description">Description</label>
      <textarea
        id="inv_description"
        name="inv_description"
        required
        minlength="10"
      ><%= locals.inv_description || '' %></textarea>

      <label for="inv_price">Price</label>
      <input
        type="number"
        id="inv_price"
        name="inv_price"
        required
        step="0.01"
        min="0"
        value="<%= locals.inv_price || '' %>"
      >

      <label for="inv_miles">Miles</label>
      <input
        type="number"
        id="inv_miles"
        name="inv_miles"
        min="0"
        value="<%= locals.inv_miles || '' %>"
      >

      <label for="inv_color">Color</label>
      <input
        type="text"
        id="inv_color"
        name="inv_color"
        pattern="^[A-Za-z\s'-]{0,30}$"
        value="<%= locals.inv_color || '' %>"
      >

      <label for="inv_image">Image Path</label>
      <input
        type="text"
        id="inv_image"
        name="inv_image"
        value="<%= locals.inv_image || '/images/no-image.png' %>"
        title="Relative path in the images folder (example: /images/vehicles/car1.jpg)."
      >

      <label for="inv_thumbnail">Thumbnail Path</label>
      <input
        type="text"
        id="inv_thumbnail"
        name="inv_thumbnail"
        value="<%= locals.inv_thumbnail || '/images/no-image-thumb.png' %>"
      >

      <button type="submit">Add Vehicle</button>
    </form>
  </main>
</body>
</html>
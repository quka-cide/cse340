<% if (title) { %>
<h1><%= title %></h1>
<% } %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<div>
  <% if(accountData) { %>
    <h2>Welcome <%= accountData.account_firstname %></h2>
    <a class="link" href="/account/update/<%= accountData.account_id %>"> Update Account Information</a>
    
    <% if(accountData.account_type === "Employee" || accountData.account_type === "Admin") {%>
    <h3>Inventory Management</h3>
    <a class="link" href="/inv/">Manage Inventory</a>
    <% } %>
  <% } else { %>
    <h2>Please log in to view your account.</h2>
    <% } %>
</div>